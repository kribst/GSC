<!-- ✅ Script JavaScript -->
<script>
    function updateVisibleForm() {
        const variantForms = document.querySelectorAll(".variant-form");
        let visibleFormFound = false; // Indicateur pour savoir si un formulaire visible a été trouvé

        variantForms.forEach(function(form) {
            if (!visibleFormFound) {
                form.style.display = "block"; // Affiche le premier formulaire masqué
                visibleFormFound = true; // Marque qu'un formulaire est maintenant visible
            } else {
                form.style.display = "none"; // Masque les autres formulaires
            }
        });
    }

    document.getElementById("add-variant").addEventListener("click", function() {
        const variantForms = document.querySelectorAll(".variant-form");
        let formToShow = null;

        // Trouver le premier formulaire masqué
        variantForms.forEach(function(form) {
            if (form.style.display === "none") {
                formToShow = form; // Enregistre le formulaire à afficher
                return; // Sort de la boucle
            }
        });

        // Si un formulaire masqué est trouvé, l'afficher
        if (formToShow) {
            formToShow.style.display = "block";
        }
    });

    document.addEventListener("click", function(e) {
        if (e.target && e.target.classList.contains("remove-variant")) {
            const variantForm = e.target.closest(".variant-form");
            // Vider tous les champs du formulaire
            variantForm.querySelectorAll("input, select, textarea").forEach(function(field) {
                field.value = ""; // Réinitialiser la valeur des champs
                if (field.tagName === "SELECT") {
                    field.selectedIndex = 0; // Réinitialiser le sélecteur
                }
            });
            variantForm.style.display = "none"; // Masquer le formulaire après l'avoir vidé
        }
    });

    // Initialisation : masquer tous les formulaires sauf le premier
    updateVisibleForm();
</script>
